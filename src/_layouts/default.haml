!!! 5
%html
    %head
        %title The Association of Colleges of Sisters of Saint Joseph
        %link{:href => "css/bootstrap.css", :rel => "stylesheet"}
        %link{:href => "css/bootstrap-responsive.css", :rel => "stylesheet"}
        %link{:href => "css/application.css", :rel => "stylesheet"}
        %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"}
        %script{:src => "js/bootstrap.js"}
        %script{:src => "js/application.js"}
    %body
        .navbar.navbar-static-top
            .navbar-inner
                .container
                    %button.btn.btn-navbar{:data => {:toggle => "collapse", :target => ".nav-collapse"}}
                        %span.icon-bar
                        %span.icon-bar
                        %span.icon-bar
                    %a.brand{:href => "/", :title => "Association of Colleges of Sisters of Saint Joseph", :rel => "tooltip"}
                        ACSSJ
                    .nav-collapse.collapse
                        %ul.nav
                            %li{:class => (current_page.include?("index") ? "active" : "")}
                                %a{:href => "/"} Home
                            %li{:class => (current_page.include?("about") ? "active" : "")}
                                %a{:href => "/"} About
                            %li{:class => (current_page.include?("news") ? "active" : "")}
                                %a{:href => "/"} News
                            %li.dropdown{:class => (current_page.include?("exchange") ? "active" : "")}
                                %a{:href => "#", :data => {:toggle => "dropdown"}, :class => "dropdown-toggle"}
                                    Exchanges
                                    %i.caret
                                %ul.dropdown-menu
                                    %li
                                        %a{:href => ""} Student
                                    %li
                                        %a{:href => ""} Faculty Staff
                            %li{:class => (current_page.include?("courses") ? "active" : "")}
                                %a{:href => "/"} Online Courses
                            %li{:class => (current_page.include?("conversation") ? "active" : "")}
                                %a{:href => "/"} Conversation

        = yield
        .container
            %footer
                %hr
                %ul.nav.nav-pills
                    %li
                        %a &copy; Copyright ACSSJ 2012
                    %li.pull-right
                    %li.dropup.pull-right
                        %a.dropup-toggle{:href => "#", :data => {:toggle => "dropdown"}}
                            Contact
                            %i.icon-chevron-up
                        %ul.dropdown-menu
                            %li.nav-header How can we help?
                            %li.divider
                            %li
                                %a.inquiry{:href => "#contact", :data => {:toggle => "modal"}} General Inquiry
                            %li
                                %a.inquiry{:href => "#contact", :data => {:toggle => "modal"}} Topic 1
                            %li
                                %a.inquiry{:href => "#contact", :data => {:toggle => "modal"}} Topic 2
                            %li
                                %a.inquiry{:href => "#contact", :data => {:toggle => "modal"}} Topic 3
